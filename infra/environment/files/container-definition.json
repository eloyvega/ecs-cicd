[
  {
    "name": "${container_name}",
    "image": "${image_repository}:${image_tag}",
    "essential": true,
    "memoryReservation": ${memory_reservation},
    "portMappings": [
      {
        "protocol": "tcp",
        "hostPort": 0,
        "containerPort": ${port}
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }
]
